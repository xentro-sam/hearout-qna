<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Question</h1>
    <div class="col-8 offset-2">
        <form action="/questions/<%= question._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="question[title]" id="title" value="<%= question.title %>" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="question[description]" id="description" cols="30" rows="15" class="form-control" required><%= question.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn bg-option">Update Question</button>
            </div>
        </form>
        <div class="mb-3">
            <a href="/questions/<%= question._id %>" class="btn bg-yellow">Back To Question</a>
        </div>
    </div>
</div>